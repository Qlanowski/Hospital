@{
    ViewBag.Title = "Patients Page";
}
@section Scripts{
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app-patients.js"></script>
    <script src="~/js/patientsController.js"></script>
}
<div ng-app="app-patients">
    <div id="search">
        Search Box
        <div ng-controller="patientsController as vm">
            <div class="text-danger" ng-show="vm.errorMessage">{{vm.errorMessage}}</div>
            <div ng-show="vm.isBusy" class="text-center"><i class="fa fa-spinner fa-spin"></i>Loading...</div>
            <table id="searchTable" class="table table-responsive">
                <tr ng-repeat="patient in vm.patients" ng-click="ShowPatient()">   
                    <td>{{patient.surname}}</td>
                    <td>{{patient.name}}</td>
                </tr>  
            </table> 
        </div>
    </div>
    <div id="patient">
        Patient Box

    </div>
</div>